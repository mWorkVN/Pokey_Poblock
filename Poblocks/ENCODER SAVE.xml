        <block ID="0" type="1100" position="800/300">
            <Name>UpdateDataTobatttery</Name>
            <hideInputs>5</hideInputs>
            <hideOutputs>3</hideOutputs>
            <hideMemory_bits>1</hideMemory_bits>
            <hideMemory_int8>0</hideMemory_int8>
            <hideMemory_int16>0</hideMemory_int16>
            <hideMemory_int32>0</hideMemory_int32>
            <hideVariables>start : INPUT(1,bit)
rstEn1 : INPUT(2,bit)
rstEn2 : INPUT(3,bit)
rstEn3 : INPUT(4,bit)
Value: INPUT(5,int32)
Out1: OUTPUT(1,int32)
Out2: OUTPUT(2,int32)
Out3: OUTPUT(3,int32)
tmpStart : bit</hideVariables>
            <hideCode># Check clock
LOAD start
STORE S

AND !tmpStart
POP tmpStart

CMPEQ DL[1]
JMPF cancelStart

# begin
LOAD DL[0]
STORE Value
# Copy encoder 1
LOAD DhA08
STORE Dh200
# Copy encoder 2
LOAD DhA0C
STORE Dh204
# Copy encoder 3
LOAD DhA10
STORE Dh208

cancelStart:
#save encoder 1
LOAD Dh200
STORE DhA08
STORE Out1
#save encoder 2
LOAD Dh204
STORE DhA0C
STORE Out2
#save encoder 3
LOAD Dh208
STORE DhA10
STORE Out3
#button reset 1
LOAD DL[0]
CMPLT rstEn1
JMPF resetblock1
#button reset 2
LOAD DL[0]
CMPLT rstEn2
JMPF resetblock2
#button reset 3
LOAD DL[0]
CMPLT rstEn2
JMPF resetblock3
#jump to end
JMP endprogram

resetblock1:
LOAD Value
STORE Dh200
JMP endprogram
resetblock2:
LOAD Value
STORE Dh204
JMP endprogram
resetblock3:
LOAD Value
STORE Dh208
endprogram:</hideCode>
        </block>
